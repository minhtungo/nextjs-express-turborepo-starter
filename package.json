{
  "private": true,
  "name": "full-stack-turborepo-starter",
  "scripts": {
    "changeset": "changeset",
    "publish:packages": "changeset publish",
    "version:packages": "turbo build && changeset version",
    "build": "turbo build",
    "dev": "turbo dev",
    "ui:add": "turbo run ui:add",
    "lint": "turbo lint",
    "lint:fix": "turbo lint --continue -- --apply",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "turbo format --continue --",
    "prettier": "npx prettier --write \"**/*.{ts,tsx}\"",
    "format:fix": "turbo format --continue -- --write",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/changelog-github": "latest",
    "@changesets/cli": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "turbo": "latest",
    "knip": "^5.41.1"
  },
  "lint-staged": {
    "*.{ts,tsx,md}": "prettier --write"
  },
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": ">=20"
  }
}
